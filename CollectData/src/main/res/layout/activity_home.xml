<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/home_title"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_33333"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/collectBtnL">
        <!--imu sensors-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_1"
                android:textColor="@color/color_33333"/>

            <LinearLayout
                android:id="@+id/AccelerL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_2"
                android:textColor="@color/color_33333"/>

            <LinearLayout
                android:id="@+id/gyroscopeL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gyroscopeAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/gyroscopeX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/gyroscopeY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/gyroscopeZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_3"
                android:textColor="@color/color_33333"/>

            <LinearLayout
                android:id="@+id/magnetometerL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/magnetometerAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/magnetometerX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/magnetometerY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/magnetometerZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_4"
                android:textColor="@color/color_33333"/>
            <LinearLayout
                android:id="@+id/gpsL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gpsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/satelliteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/svid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/lationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/gpsAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_5"
                android:textColor="@color/color_33333"/>

            <LinearLayout
                android:id="@+id/compassL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/norPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <ImageView
                    android:id="@+id/compassIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/znz"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_6"
                android:textColor="@color/color_33333"/>
            <LinearLayout
                android:id="@+id/wifiL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wifiStste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/wifiSsid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/wifiBSsid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiIpA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiMac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiLinkSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="z："
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/netWorkId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="z："
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiRssi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiHiddenSsid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                <TextView
                    android:id="@+id/wifiFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:text="@string/home_sub_title_7"
                android:textColor="@color/color_33333"/>

            <TextView
                android:id="@+id/blueEMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_33333"/>

            <LinearLayout
                android:id="@+id/bleL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>

                <TextView
                    android:id="@+id/bleAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_33333"/>
                
                <LinearLayout
                    android:id="@+id/otherDev"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_sub_title_8"
                    android:textColor="@color/color_33333"/>

                <Button
                    android:id="@+id/takePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/home_btn_pz"
                    android:textAllCaps="false"
                    android:textColor="@color/color_33333"
                    android:textSize="14sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/showPhoto"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/showPhoto"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/imgW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_33333"/>

                    <TextView
                        android:id="@+id/imgH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_33333"/>

                    <TextView
                        android:id="@+id/imgConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:gravity="left"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_33333"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_666666"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/collectBtnL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/collectBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="8dp"
            android:text="@string/home_btn_start"
            android:textAllCaps="false"
            android:textColor="@color/color_33333"
            android:textSize="14sp" />
        <Button
            android:id="@+id/toArBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:layout_gravity="right|center_vertical"
            android:text="@string/home_btn_start_ar"
            android:textColor="@color/color_33333"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>