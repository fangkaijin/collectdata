<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/chatIv"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:src="@drawable/ic_chat_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/chatIv"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_alignTop="@+id/chatIv"/>

    <TextView
        android:id="@+id/lastMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/chatIv"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_alignBottom="@+id/chatIv"/>

    <TextView
        android:id="@+id/chatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chatName"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/chatIv"
        android:layout_marginTop="16dp"
        android:background="@color/color_22000000"
        android:layout_toRightOf="@+id/chatIv"/>

</RelativeLayout>